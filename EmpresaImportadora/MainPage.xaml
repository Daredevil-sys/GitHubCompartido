<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmpresaImportadora.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Cantidad en pesos mexicanos (MXN):"
               FontSize="18"/>
            <Entry x:Name="pesosEntry"
               Placeholder="Ej: 2500"
               Keyboard="Numeric"/>

            <Label Text="Tipo de cambio (MXN por 1 USD):"
               FontSize="18"/>
            <Entry x:Name="tipoCambioEntry"
               Placeholder="Ej: 17.50"
               Keyboard="Numeric"/>

            <Button Text="Calcular dólares"
                Clicked="CalcularDolares"/>

            <Label x:Name="resultadoLabel"
               FontSize="20"
               TextColor="DarkBlue"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
