<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu.appcuatro"
             Title="appcuatro">
    <VerticalStackLayout Spacing="15" Padding="30">

        <Label Text="Horas trabajadas:"
               FontSize="18" />
        <Entry x:Name="txtHoras"
               Keyboard="Numeric"
               Placeholder="horas" />

        <Label Text="Pago por hora:"
               FontSize="18" />
        <Entry x:Name="txtPagoHora"
               Keyboard="Numeric"
               Placeholder="pago" />

        <Button Text="Calcular sueldo"
                Clicked="OnCalcularClicked"
                BackgroundColor="Green"
                TextColor="White" />

        <Label x:Name="lblResultado"
               FontSize="20"
               TextColor="Blue"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>