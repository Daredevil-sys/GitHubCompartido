<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu.appuno"
             Title="appuno">
    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Label 
             Text="Números Pares del 0 al 100"
             FontSize="24"
             HorizontalOptions="Center" />

            <Button 
             Text="Mostrar Números Pares"
             Clicked="OnMostrarParesClicked"
             Margin="0,20,0,10" />

            <Label 
             x:Name="ResultadoLabel"
             FontSize="18"
             TextColor="DarkBlue" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>