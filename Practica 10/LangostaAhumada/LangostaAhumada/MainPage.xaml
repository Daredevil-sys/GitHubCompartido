<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LangostaAhumada.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Ingrese la cantidad de personas:"
               FontSize="18"/>

            <Entry x:Name="personasEntry"
               Placeholder="Ej: 250"
               Keyboard="Numeric"/>

            <Button Text="Calcular Presupuesto"
                Clicked="CalcularPresupuesto"/>

            <Label x:Name="resultadoLabel"
               FontSize="20"
               TextColor="DarkGreen"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
